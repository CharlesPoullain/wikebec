{% extends 'layout.html.twig' %}

{%  block main %}

    <div class="row">
        <div class="col">
            <div style="text-align: center;">
                <div class="card" style="width: 60%; margin: auto; margin-top: 10%; padding: 5%;">

                    <h4 style="color: brown;">Liste des termes trouv√©s</h4>
                    <div style="height: 450px;">
                        <div style="overflow: scroll; height: 100%; margin-right: 5%; margin-top: 5%; width: 100%;">
                            <div style="padding-bottom: 10%;">
                                {% for term in terms %}
                                    <a  href="{{ path('termDetail', {'id': term.id}) }}" class="blocka">
                                        <li class="list-group-item blocklink">
                                            <div class="row">
                                                <div class="col">
                                                    <p style="text-align: left;">{{ term.term }}</p>
                                                </div>
                                                <div class="col">
                                                    <p style="text-align: right;">{{ term.votescount}} <i style="color: #FFEB3B;" class="fas fa-star"></i></p>
                                                </div>
                                            </div>
                                        </li>
                                    </a>
                                {%  endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

